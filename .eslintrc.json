{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["warn", 2, { "SwitchCase": 1 }],
	    "linebreak-style": ["error", "windows"],
	    "quotes": ["error", "double"],
	    "semi": ["error", "always"],
	    "no-console": "warn",
	    "no-var":"error",
	    "no-undef": 0
    }
}
